# ============================================
# Saraya ERP - Client Environment Variables
# ============================================

# API Configuration
VITE_API_BASE_URL="http://localhost:3000"
VITE_API_TIMEOUT="10000"

# Application Configuration
VITE_APP_NAME="Saraya ERP"
VITE_APP_VERSION="1.0.1"
VITE_APP_DESCRIPTION="Hospital Management System"

# Authentication Configuration
VITE_AUTH_REFRESH_INTERVAL="900000"  # 15 minutes
VITE_AUTH_WARNING_TIME="300000"  # 5 minutes before expiry

# Feature Flags
VITE_ENABLE_PATIENT_PORTAL="true"
VITE_ENABLE_TELEHEALTH="false"
VITE_ENABLE_ANALYTICS="true"

# File Upload Configuration
VITE_MAX_FILE_SIZE="10485760"  # 10MB
VITE_ALLOWED_FILE_TYPES="image/*,application/pdf,.doc,.docx"

# Map Configuration (if needed)
VITE_MAP_API_KEY=""
VITE_DEFAULT_LATITUDE="32.8872"
VITE_DEFAULT_LONGITUDE="13.1913"

# Development Configuration
VITE_DEV_MODE="true"
VITE_DEBUG_MODE="false"
